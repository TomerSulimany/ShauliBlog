@model IEnumerable<ShauliBlog.Models.Comment>
    

<section>
    <button type="button" class="show-comments-btn btn btn-info" value="show">show comments</button>
    <section id="comments" class=" comments-list panel panel-info">



        <h3>Comments</h3>
        @if (Model.Count() == 0)
        {
            <h4>No comments for this post.</h4>
        }
        else
        {
            foreach (var item in Model)
            {
                <article>
                    <header>
                        @Html.DisplayFor(modelItem => item.Title)
                        <a href="@Html.ValueFor(modelItem => item.AuthorWebsite)">@Html.DisplayFor(modelItem => item.Author)</a>
                        on <time>@Html.DisplayFor(modelItem => item.WhenTaken)</time>
                    </header>
                    <p>@Html.DisplayFor(modelItem => item.Content)</p>
                </article>
            }
        }
    </section>

</section>